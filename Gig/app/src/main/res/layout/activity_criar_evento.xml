<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucas.gig.activitys.CriarEventoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Criar Evento"
        android:textColor="@color/md_black_1000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/nomeEvento"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:hint="Nome do Evento"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/horarioInicio"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nomeEvento"
        android:layout_marginTop="150dp"
        android:hint="Horário de início"
        android:inputType="datetime"
        app:layout_constraintTop_toBottomOf="@+id/nomeEvento"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/horarioTermino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nomeEvento"
        android:layout_alignTop="@+id/horarioInicio"
        android:hint="Horário de término"
        android:inputType="datetime"
        app:layout_constraintStart_toEndOf="@+id/horarioInicio"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="109dp" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/descricao"
        android:layout_width="316dp"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/horarioInicio"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/endereco"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        android:hint="Endereço"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/horarioTermino"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/criarEvento"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/md_blue_900"
        android:text="Criar Evento"
        android:textColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="179dp" />

</RelativeLayout>
